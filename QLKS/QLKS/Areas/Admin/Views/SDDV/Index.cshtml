@model IEnumerable<Data_Access.DTO.SDDVLOAD>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p style="padding-left:20px">
    <button type="submit" style=" text-decoration: none; color: black" class="btn btn-outline btn-danger">
        @Html.ActionLink("Sử dụng Dịch Vụ", "Create")
    </button>

</p>

<div class="col-lg-12">
    <div class="panel panel-danger">
        <div class="panel-heading">
            Dịch Vụ
        </div>
        <div class="panel-body">
            <table class="table" border="1">
                <tr>

                    <th>
                        Dịch Vụ
                    </th>
                    <th>
                        Phòng
                    </th>
                    <th>
                        Số Lượng
                    </th>
                    <th>
                        Ngày Sử dụng
                    </th>
                    <th>
                        Thành Tiền
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SERVICES)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PHONG)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SOLUONG)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NGAY)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TONGTIEN)
                        </td>
                        <td>
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                            @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID }, new AjaxOptions
                            {
                                OnComplete = "$('#row_" + @item.ID + "').remove()",
                                HttpMethod = "Delete"
                            })
                        </td>
                    </tr>
                }

            </table>
            </div>
</div>
</div>