@model IEnumerable<Data_Access.DTO.DICHVU>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p style="padding-left:20px">
    <button type="submit" style=" text-decoration: none; color: black" class="btn btn-outline btn-danger">
        @Html.ActionLink("Thêm Dịch Vụ", "Create")
    </button>

</p>

<div class="col-lg-12">
    <div class="panel panel-danger">
        <div class="panel-heading">
            Dịch Vụ
        </div>
        <div class="panel-body">
            <table id="table_id" class="table" border="1" style="margin-top:20px">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Tên Dịch Vụ
                        </th>
                        <th>
                            Giá
                        </th>
                        <th>
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TEN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GIA)
                            </td>
                            <td>
                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID })
                            </td>
                            <td>
                                @Ajax.ActionLink("Xóa", "Delete", new { id = item.ID }, new AjaxOptions
                                {
                                    OnComplete = "$('#row_" + @item.ID + "').remove()",
                                    HttpMethod = "Delete"
                                })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>