@model Data_Access.DTO.TAISAN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-lg-12">
    <div class="panel panel-danger">
        <div class="panel-heading">
           Thiết Bị
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Tên Thiết Bị :", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="width: 300px">
                        @Html.EditorFor(model => model.TEN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TEN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Loại :", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="width: 300px">
                        @Html.EditorFor(model => model.LOAI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LOAI, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Giá :", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="width: 300px">
                        @Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Số Lượng:", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10" style="width: 300px">
                        @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Tình Trạng :", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.STATUS)
                            @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        </div>
</div>
</div>