@{
    ViewBag.Title = "Test";
    Layout = "~/Areas/NhanVien/Views/Shared/LayoutNhanVien.cshtml";
}
@Html.ActionLink("Back to List", "Index", new { id = Model.IDCT })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
