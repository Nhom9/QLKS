@model QLKS.Areas.Admin.Models.PhieuThue

@{
    ViewBag.Title = "Test";
    Layout = "~/Areas/NhanVien/Views/Shared/LayoutNhanVien.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Đặt Phòng
            </div>
            <div class="panel-body">
             @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-6">
                    <form role="form">
                        <div class="form-group">
                            <h2>Thông Tin Đặt Phòng</h2>
                            <p class="help-block"></p>
                            <div class="form-group has-success">
                                <label class="control-label" for="inputSuccess">Loại Phòng</label>
                                @Html.DropDownList("var1", null, htmlAttributes: new { @class = "form-control", @onchange = "myFunction()" })
                            </div>
                            <p class="help-block"></p>
                            <div class="form-group has-warning">
                                <label class="control-label" for="inputSuccess">Phòng</label>
                                @Html.DropDownList("var2", null, htmlAttributes: new { @class = "form-control tenphong" })
                             </div>
                                <p class="help-block"></p>
                                <label>Số Người: </label>
                                <p class="help-block"></p>
                                <span>Người Lớn:</span><input class="123" type="number" value="0" style="width:50px;margin-left:20px" />
                                <span style="margin-left:200px">Trẻ Em:</span><input class="123" type="number" value="0" style="width:50px; margin-left:20px" />
                            </div>
                        </form>
                    
                </div>
                <!-- /.col-lg-6 (nested) -->
                <div class="col-lg-6">
                    <h2>Thông Tin Khách Hàng</h2>
                    <div class="form-group has-success">
                        <label class="control-label" for="inputSuccess">CMND</label>
                        @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group has-warning">
                        <label class="control-label" for="inputWarning">Họ & Tên</label>
                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="form-group has-error">
                        <label class="control-label" for="inputError">Số Điện Thoại</label>
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="form-group has-error">
                        <label class="control-label" for="inputError">Tên Công Ty</label>
                        @Html.EditorFor(model => model.TenCongTy, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>


                </div>
                <!-- /.col-lg-6 (nested) -->
            </div>
            <!-- /.row (nested) -->
               }
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
