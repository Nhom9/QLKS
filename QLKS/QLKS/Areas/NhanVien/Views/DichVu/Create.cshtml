@model Data_Access.DTO.DICHVU

@{
    ViewBag.Title = "Test";
    Layout = "~/Areas/NhanVien/Views/Shared/LayoutNhanVien.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h5 style=" color: red"> @ViewBag.ThongBao </h5>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Dịch Vụ :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 300px">
                @Html.EditorFor(model => model.TEN, new { htmlAttributes = new { @class = "form-control" } })
                @*<input type="text" name="TEN" placeholder="Chưa nhập tên dịch vụ" required="" id="aa" class="form-control" />*@
                @Html.ValidationMessageFor(model => model.TEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Giá :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 300px">
                @Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
                @*<input type="text" name="TEN" placeholder="Tên sản phẩm" required="" id="aa" class="form-control"/>
                    <input type="text" name="GIA" placeholder="Chưa nhập giá sản phẩm" required="" id="a" class="form-control" />*@
                @Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Trở lại", "Index")
</div>
